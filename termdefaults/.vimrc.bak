let mapleader = " "
nmap <bslash> <space>

set number
set relativenumber
autocmd InsertEnter * :set norelativenumber
autocmd InsertLeave * :set relativenumber

let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"

set clipboard=unnamedplus
set mouse=a
set shiftwidth=2
set tabstop=2
set expandtab
set nobackup
set scrolloff=8
set nowrap
set incsearch
set ignorecase
set showcmd
set showmode
set hlsearch
set autoindent
set smartindent
set smarttab

inoremap jk <Esc>
nnoremap J zz5j
nnoremap K zz5k
nnoremap <C-u> zz<C-u>
nnoremap <C-d> zz<C-d>
nnoremap n zzn
nnoremap N zzN
nnoremap <silent> ss :sp<CR>
nnoremap <silent> sv :vs<CR>

noremap <silent> <C-k> :wincmd k<CR>
noremap <silent> <C-j> :wincmd j<CR>
noremap <silent> <C-h> :wincmd h<CR>
noremap <silent> <C-l> :wincmd l<CR>
